# Stock AI Predictor - Environment Configuration
# Copy this file to .env and fill in the values

# Model Configuration
MODEL_SEQ_LEN=32
MODEL_BATCH_SIZE=64
MODEL_HIDDEN_SIZE=64
MODEL_NUM_LAYERS=1
MODEL_DEVICE=cpu

# Training Configuration  
FULL_TRAIN_EPOCHS=10
INCREMENTAL_EPOCHS=2
VAL_SPLIT=0.2
EARLY_STOPPING_PATIENCE=5

